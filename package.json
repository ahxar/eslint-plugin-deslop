{
  "name": "eslint-plugin-deslop",
  "version": "0.3.0",
  "description": "ESLint plugin to detect and remove AI-generated code slop",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "test": "tsx tests/rules/no-excessive-comments.test.ts && tsx tests/rules/no-obvious-comments.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "ai",
    "slop",
    "code-quality"
  ],
  "author": "Ahmad Safar <ahmadsafar88@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ahxar/eslint-plugin-deslop.git"
  },
  "bugs": {
    "url": "https://github.com/ahxar/eslint-plugin-deslop/issues"
  },
  "homepage": "https://github.com/ahxar/eslint-plugin-deslop#readme",
  "peerDependencies": {
    "eslint": ">=8.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/types": "^7.0.0",
    "eslint": "^9.0.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
